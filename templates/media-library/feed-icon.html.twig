{%
  set feed_classes = [
    'feed-icon',
    'flex',
    'gap-4',
    'items-center',
  ]
%}
<a href="{{ url }}"{{ attributes.addClass(feed_classes) }}>
  <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 mango-gradient rounded-full" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
  </svg>
  <div class="">
    {% if title != '' %}
    {{ 'Subscribe to @title'|t({'@title': title}) }}
    {% else %}
    {{ 'RSS Feed abonnieren' }}
    {% endif %}
  </div>
</a>

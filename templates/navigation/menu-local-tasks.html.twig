{#
/**
 * @file
 * Theme override to display primary and secondary local tasks.
 *
 * Available variables:
 * - primary: HTML list items representing primary tasks.
 * - secondary: HTML list items representing secondary tasks.
 *
 * Each item in these variables (primary and secondary) can be individually
 * themed in menu-local-task.html.twig.
 */
#}
{% if primary %}
  <div class="visually-hidden">{{ 'Primary tabs'|t }}</div>
  <div class="border-b border-spanishgray mt-3 mb-5 flex space-x-8">
    <ul class="-mb-px flex space-x-8">{{ primary }}</ul>
  </div>
{% endif %}
{% if secondary %}
  <div class="visually-hidden">{{ 'Secondary tabs'|t }}</div>
  <div class="border-b border-spanishgray mt-3 mb-5 flex space-x-8">
    <ul class="-mb-px flex space-x-8">{{ secondary }}</ul>
  </div>
{% endif %}
